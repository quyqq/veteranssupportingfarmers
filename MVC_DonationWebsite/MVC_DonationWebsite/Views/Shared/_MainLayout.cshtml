@model MVC_DonationWebsite.Models.viewModelDonationWeb
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <title>@ViewBag.Title</title>
    <link type="text/css" href="~/Bootstrap/Content/bootstrap.min.css" rel="stylesheet" />
    <link type="text/css" href="~/MyCss/MainCss.css" rel="stylesheet" />
</head>
<body>
    <div class="container w-100 ">
        <!--Header title-->
        <div class="row w-100 mx-auto headerRowTop">
            <div class="col-12">
                @foreach (var item in Model.tb_setting)
                {
                    if (item.type == "HeaderTitle")
                    {
                        <h1 class="headerTitle text-center" style="font-size:@item.size;color:@item.colour; "> @item.textData</h1>
                        @*@Html.Raw(item.textData)*@
                        break;
                    }
                }

            </div>
        </div>
        <!-- hearder picture-->
        <div class="row w-100 mx-auto headerRow">
            <div class="col-12 col_setting">
                <!--<img src="~/Picture/Header.JPG" class="img-fluid"  alt="Header Picture">-->
                @foreach (var item in Model.tb_picture)
                {
                    if (item.code == "headerPicture")
                    {
                        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.imageData))" class="img-fluid headerPicture" alt="Header Picture">
                        break;
                    }
                }
                @foreach (var item in Model.tb_setting)
                {
                    if (item.type == "DetailsPicture")
                    {
                        <p class="detailPicture" style="font-size : @item.size; color : @item.colour">@item.textData</p>
                        @*@Html.Raw(item.textData)*@
                        break;
                    }
                }
            </div>
        </div>
    </div>
    <div class="container w-100">
        @RenderBody()
    </div>

    <div class="container w-100 ">
        <div class="row w-100 mx-auto footerRowSetting">
            <div class="col-lg-2">
                <h4 class="photograpTitle text-center">PHOTOGRAPHY</h4>
                @foreach (var item in Model.tb_picture)
                {
                    if (item.code == "footerPicture")
                    {
                        <div class="d-flex">
                            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.imageData))" class="rounded FooterPicture" alt="Header Picture">
                        </div>
                        break;
                    }
                }
            </div>

            <div class="col-lg-10">
                @foreach (var item in Model.tb_setting)
                {
                    if (item.type == "Biography")
                    {
                        <p class="storyDetail" style="font-size : @item.size; color : @item.colour">@Html.Raw(item.textData)</p>
                        break;
                    }
                }
            </div>
        </div>

    </div>
    @* javascripts *@
    <script type="text/javascript" src="~/Bootstrap/Scripts/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="~/Bootstrap/Scripts/umd/popper.min.js"></script>
    <script type="text/javascript" src="~/Bootstrap/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/MyJavascript/MainJavaScript.js?"></script>
</body>
</html>
